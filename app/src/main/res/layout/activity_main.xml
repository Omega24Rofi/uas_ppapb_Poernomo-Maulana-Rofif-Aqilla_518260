<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/instagram_logo"
        android:padding="10dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="10dp"/>

    <TextView
        android:id="@+id/share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/likes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/heart"
        app:layout_constraintEnd_toStartOf="@id/share"
        app:layout_constraintTop_toTopOf="parent"/>

<HorizontalScrollView
    android:id="@+id/story_container"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    app:layout_constraintTop_toBottomOf="@id/logo"
    app:layout_constraintStart_toStartOf="parent"
    android:scrollbars="none">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp">
        <ImageView
            android:id="@+id/user_story"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/user_story"
            android:contentDescription="User"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Your Story"
                android:layout_marginTop="50sp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@id/user_story"
                app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/asset_sg1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/asset_story"
            android:contentDescription="Asset Story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/user_story"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/asset"
            android:layout_marginTop="-19dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/asset_sg1"
            app:layout_constraintTop_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/liga_sg1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/liga_story"
            android:contentDescription="Liga story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/asset_sg1"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/liga"
            android:layout_marginTop="-19dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/liga_sg1"
            app:layout_constraintTop_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/asset_sg2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/asset_story"
            android:contentDescription="Asset Story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/liga_sg1"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/asset"
            android:layout_marginTop="-19dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/asset_sg2"
            app:layout_constraintTop_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/liga_sg2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/liga_story"
            android:contentDescription="Liga story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/asset_sg2"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/liga"
            android:layout_marginTop="-19dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/liga_sg2"
            app:layout_constraintTop_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/asset_sg3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/asset_story"
            android:contentDescription="Asset Story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/liga_sg2"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/asset"
            android:layout_marginTop="-19dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/asset_sg3"
            app:layout_constraintTop_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/liga_sg3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/liga_story"
            android:contentDescription="Liga story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/asset_sg2"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/liga"
            android:layout_marginTop="-19dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/liga_sg3"
            app:layout_constraintTop_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/asset_sg4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/asset_story"
            android:contentDescription="Asset Story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/liga_sg3"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/asset"
            android:layout_marginTop="-19dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/asset_sg4"
            app:layout_constraintTop_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/liga_sg4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/liga_story"
            android:contentDescription="Liga story"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/asset_sg3"/>
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="@string/liga"
            android:layout_marginTop="-19dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/liga_sg4"
            app:layout_constraintTop_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</HorizontalScrollView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/story_container"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/fufafa_pp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fufufafa_pp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/fufafa_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fufafa"
            app:layout_constraintStart_toEndOf="@id/fufafa_pp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/fufafa_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Putra Mulyono"
            app:layout_constraintStart_toEndOf="@id/fufafa_pp"
            app:layout_constraintTop_toBottomOf="@id/fufafa_id"
            android:layout_marginStart="12dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp">
        </ImageView>

        <ImageView
            android:id="@+id/fufafa_post"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/post_fufufafa"
            app:layout_constraintTop_toTopOf="@id/fufafa_pp"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/fufafa_likes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"

            android:src="@drawable/heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fufafa_post"/>

        <ImageView
            android:id="@+id/fufafa_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/comment"
            app:layout_constraintTop_toBottomOf="@id/fufafa_post"
            app:layout_constraintStart_toEndOf="@id/fufafa_likes"

            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/fufafa_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/share"
            app:layout_constraintTop_toBottomOf="@id/fufafa_post"
            app:layout_constraintStart_toEndOf="@id/fufafa_comment"

            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/fufafa_bookmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/bookmark"
            app:layout_constraintTop_toBottomOf="@id/fufafa_post"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-175dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/fufafa_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disukai oleh Ikhwan_Hanif"
            app:layout_constraintTop_toBottomOf="@id/fufafa_likes"
            android:paddingHorizontal="10dp">
        </TextView>
        <TextView
            android:id="@+id/fufafa_postid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fufafa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fufafa_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            >
        </TextView>
        <TextView
            android:id="@+id/fufafa_postdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Proud"
            app:layout_constraintStart_toEndOf="@id/fufafa_postid"
            app:layout_constraintTop_toBottomOf="@id/fufafa_view"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue"
            >
        </TextView>
        <TextView
            android:id="@+id/fufafa_comment_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tampilkan 10 komentar lainya"
            app:layout_constraintTop_toBottomOf="@id/fufafa_postdesc"
            android:paddingHorizontal="10dp"
            android:textColor="@color/grey">
        </TextView>






        <!--    assets post-->
        <ImageView
            android:id="@+id/asset_pp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/assets_ugm_pp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/fufafa_comment_count"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/asset_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assets_UGM"
            app:layout_constraintStart_toEndOf="@id/asset_pp"
            app:layout_constraintTop_toBottomOf="@id/fufafa_comment_count"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/asset_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sekolah Vokasi UGM"
            app:layout_constraintStart_toEndOf="@id/asset_pp"
            app:layout_constraintTop_toBottomOf="@id/asset_id"
            android:layout_marginStart="12dp"
            >
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fufafa_comment_count"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp">
        </ImageView>

        <ImageView
            android:id="@+id/asset_post"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/post_asset"
            app:layout_constraintTop_toBottomOf="@id/asset_pp"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/asset_likes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/asset_post"/>

        <ImageView
            android:id="@+id/asset_comment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/comment"
            app:layout_constraintTop_toBottomOf="@id/asset_post"
            app:layout_constraintStart_toEndOf="@id/asset_likes"

            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/asset_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/share"
            app:layout_constraintTop_toBottomOf="@id/asset_post"
            app:layout_constraintStart_toEndOf="@id/asset_comment"

            android:layout_marginStart="10dp"/>
        <ImageView
            android:id="@+id/asset_bookmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/bookmark"
            app:layout_constraintTop_toBottomOf="@id/asset_post"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/asset_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disukai oleh Ikhwan_Hanif"
            app:layout_constraintTop_toBottomOf="@id/asset_likes"
            android:paddingHorizontal="10dp">
        </TextView>
        <TextView
            android:id="@+id/asset_postid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fufafa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/asset_view"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            >
        </TextView>
        <TextView
            android:id="@+id/asset_postdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Proud"
            app:layout_constraintStart_toEndOf="@id/asset_postid"
            app:layout_constraintTop_toBottomOf="@id/asset_view"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue"
            >
        </TextView>
        <TextView
            android:id="@+id/asset_comment_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tampilkan 10 komentar lainya"
            app:layout_constraintTop_toBottomOf="@id/asset_postdesc"
            android:paddingHorizontal="10dp"
            android:textColor="@color/grey">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="@color/light_grey">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/home"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="50dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/search"
        android:layout_marginEnd="70dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/upload"
        android:layout_marginEnd="60dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/reels"
        android:layout_marginEnd="60dp"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/profile"
        />
</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>